{
  "compileOnSave": true,
  "include": ["src/**/*", "tests/**/*"],
  "extends": ["@tsconfig/strictest/tsconfig", "@tsconfig/node21/tsconfig"],
  "compilerOptions": {
    "noEmit": true,
    "composite": true,
    "outDir": "cli-incremental-info",

    "resolveJsonModule": true,
    "verbatimModuleSyntax": true,

    "noUnusedParameters": false,
    "noImplicitAny": false
  }
}
